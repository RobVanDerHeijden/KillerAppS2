            </td>
            <td>
                @Html.DisplayFor(modelItem => gang.Tag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => gang.Description)
            </td>
            <td>
                @*TODO: FIX*@
                @*@gang.Players.Count()*@
            </td>
            <td>
                @Html.ActionLink("Edit", "EditGang", new { id = gang.GangId }) |
                @Html.ActionLink("Details", "DetailsGang", new { id = gang.GangId }) |
                @Html.ActionLink("Delete", "DeleteGang", new { id = gang.GangId })
            </td>
        </tr>
        }
    </tbody>
</table>
