@model System.Collections.Generic.IEnumerable<Model.Gang>

@{
    ViewBag.Title = "Gang Index";
    Layout = "_Layout";
}

<h2>Gang Index</h2>

<p>
    <a asp-action="CreateGang">Create New</a>
</p>
<table class="table">
    <thead>
