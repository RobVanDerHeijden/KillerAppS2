@using Microsoft.AspNetCore.Http
@model PlayerViewModel

@{
    ViewBag.Title = "Player DashBoard";
    Layout = "_Layout";
}

<h2>Player DashBoard</h2>
@if ((string)TempData["EnergyCompleteNotice"] == "succes")
{
    <p class="notice-succes-status">Energy refilled! <i class="fas fa-check-circle"></i></p>

}
else if ((string)TempData["EnergyCompleteNotice"] == "failure")
{
    <p class="notice-failure-status">Energy not refilled <i class="fas fa-times-circle"></i></p>
}
<fieldset>
    <p>Welcome @Context.Session.GetString("Username")</p>
</fieldset>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PlayerDashBoard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Player.Username" class="control-label"></label>
                <input asp-for="Player.Username" class="form-control" />
                <span asp-validation-for="Player.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Password" class="control-label"></label>
                <input asp-for="Player.Password" class="form-control" type="password" required=""/>
                <span asp-validation-for="Player.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.RealName" class="control-label"></label>
                <input asp-for="Player.RealName" class="form-control" />
                <span asp-validation-for="Player.RealName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Country" class="control-label"></label>
                <input asp-for="Player.Country" class="form-control" />
                <span asp-validation-for="Player.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.City" class="control-label"></label>
                <input asp-for="Player.City" class="form-control" />
                <span asp-validation-for="Player.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
